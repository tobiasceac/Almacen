	<parameter name="CODIGO" class="java.lang.String"/>
	<queryString>
		<![CDATA[SELECT 
                        c.codigo as codigo_cliente,
                        c.nombre AS nombre_cliente, 
                        c.nif AS nif_cliente,
                        p.codigo_pedido AS codigo_pedido, 
                        p.fecha_pedido as fecha,
                        a.descripcion AS articulo,
                        p.unidades,
                        a.precio_de_venta AS precio,
                        (p.unidades * a.precio_de_venta) AS importe,
                        p.num_factura AS num_factura
                    FROM clientes c
                    JOIN pedidos p ON c.codigo = p.codigo_cliente
                    JOIN articulos a ON p.codigo_articulo = a.codigo
                    WHERE p.codigo_cliente = $P{CODIGO}
                    ORDER BY p.fecha_pedido]]>
	</queryString>
